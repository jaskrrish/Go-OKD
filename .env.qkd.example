# QKD Production Environment Variables
# Copy this file to .env.qkd and fill in the values

# Database Configuration
DB_PASSWORD=qkd_secure_password_change_me
DB_HOST=postgres
DB_PORT=5432
DB_NAME=qkd_production
DB_USER=qkd_user
DB_SSL_MODE=disable

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_HOST=redis
REDIS_PORT=6379

# IBM Qiskit Configuration (optional - leave empty to use simulator only)
QISKIT_API_KEY=
QISKIT_BACKEND=ibmq_qasm_simulator
# Available backends: ibmq_qasm_simulator, ibm_kyoto, ibm_osaka, etc.

# JWT Authentication
JWT_SECRET=change_this_secret_key_in_production_min_32_chars
JWT_EXPIRY=24h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Grafana
GRAFANA_PASSWORD=admin_change_me

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
API_READ_TIMEOUT=30s
API_WRITE_TIMEOUT=30s

# CORS (optional)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# TLS/HTTPS (optional - for production)
TLS_ENABLED=false
TLS_CERT_FILE=/certs/server.crt
TLS_KEY_FILE=/certs/server.key

# Session Configuration
SESSION_DEFAULT_TTL_MINUTES=60
SESSION_MAX_TTL_MINUTES=1440
SESSION_CLEANUP_INTERVAL_MINUTES=15

# Key Configuration
KEY_MIN_LENGTH=128
KEY_MAX_LENGTH=4096
KEY_DEFAULT_LENGTH=256

# QBER Configuration
QBER_THRESHOLD=0.11
QBER_SAMPLE_RATIO=0.10

# Error Correction
ERROR_CORRECTION_ENABLED=true
ERROR_CORRECTION_PASSES=4

# Privacy Amplification
PRIVACY_AMPLIFICATION_METHOD=SHA3-256
PRIVACY_AMPLIFICATION_SECURITY_PARAMETER=64
